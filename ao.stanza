defn glue-when<?T> (zero?:True|False, shapes:Seqable<?T&Poseable>) -> Seq<T> :
  generate<T> :
    for (shape in shapes, i in 0 to false) do :
      if zero? or i != 0: yield(glue-of(shape, 1.0f))
      yield(shape)

