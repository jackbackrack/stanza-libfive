public defn eval-ao (s:String) -> Geom :
  val forms = read-all(s)
  println-all(["FORMS: " forms])
  val es = unwrap-all(parse(forms))
  println-all(["EXP: "   es])
  val e  = eval-begin(top-env, es)
  println-all(["G: " e])
  match(e) :
    (g:Geom) : jit(g)
    (o) :      Msg(to-string(o))

